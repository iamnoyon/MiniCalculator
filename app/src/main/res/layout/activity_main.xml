<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@color/screen"
        >
        <EditText
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ffffff"
            />
        <EditText
            android:id="@+id/operationView"
            android:layout_below="@id/resultView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#D5D3D3"
            />
        <EditText
            android:id="@+id/inputView"
            android:layout_below="@id/operationView"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="90dp"
            android:background="#ffffff"
            />

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/screen"
        android:id="@+id/backSpaceButtonContainer"
        android:layout_below="@id/screen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageButton
            android:id="@+id/backspace"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/backspace"
            android:background="@color/screen"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_below="@id/backSpaceButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F57C00"
        android:gravity="bottom"
        >
        <LinearLayout
            android:id="@+id/buttonRow1_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@color/btn1color"
                android:text="C"
                />
            <Button
                android:id="@+id/btnRoot"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@color/btn1color"
                android:text="âˆš"
                />
            <Button
                android:id="@+id/btnPower"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@color/btn1color"
                android:text="^"
                />
            <Button
                android:id="@+id/btnPlus"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@color/btn1color"
                android:text="+"
                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/marginedButton"
            android:layout_below="@id/buttonRow1_layout"
            android:background="#800080"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/buttonRow2_layout"
                android:layout_below="@id/buttonRow1_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="7"
                    />
                <Button
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="4"
                    />
                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="1"
                    />
                <Button
                    android:id="@+id/btnDot"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="."
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonRow3_layout"
                android:layout_below="@id/buttonRow1_layout"
                android:layout_toRightOf="@id/buttonRow2_layout"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="8"
                    />
                <Button
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="5"
                    />
                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="2"
                    />
                <Button
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="0"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonRow4_layout"
                android:layout_below="@id/buttonRow1_layout"
                android:layout_toRightOf="@id/buttonRow3_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="9"
                    />
                <Button
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="6"
                    />
                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="@color/btn2color"
                    android:text="3"
                    />
                <Button
                    android:id="@+id/btnResult"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_margin="1dp"
                    android:background="#800080"
                    android:text="="
                    />

            </LinearLayout>

        </LinearLayout>





        <LinearLayout
            android:id="@+id/buttonRow5_layout"
            android:layout_below="@id/buttonRow1_layout"
            android:orientation="vertical"
            android:layout_toRightOf="@id/marginedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btnMinus"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:background="@color/btn1color"
                android:text="-"
                />
            <Button
                android:layout_margin="1dp"
                android:id="@+id/btnMultiply"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/btn1color"
                android:text="x"
                />
            <Button
                android:layout_margin="1dp"
                android:id="@+id/btnDivision"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/btn1color"
                android:text="/"
                />
            <Button
                android:layout_margin="1dp"
                android:id="@+id/btnPercent"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/btn1color"
                android:text="%"
                />

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>